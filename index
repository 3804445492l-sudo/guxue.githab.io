            <br>
            <button onclick="changeText()">点我试一试</button>
            <p id="demo-text" style="color: gray; margin-top: 10px;"></p>
        </div>
    </main>

    <script>
        // JavaScript 部分：负责网页的互动
        function changeText() {
            document.getElementById('demo-text').innerHTML = "你刚刚点击了按钮！恭喜你完成了第一次交互。";
        }
